{
  "context_menus": {
    "description": "Right-click context menu implementation",
    "events": {
      "oncontextmenu": {
        "syntax": "element.oncontextmenu = (e) => { e.preventDefault(); showMenu(e); }",
        "notes": "Use oncontextmenu (not contextmenu event). Always preventDefault()."
      }
    },
    "patterns": {
      "basic": "element.oncontextmenu = (e) => { e.preventDefault(); menu.style.left = e.pageX + 'px'; menu.style.top = e.pageY + 'px'; menu.style.display = 'block'; }",
      "close_on_click": "document.addEventListener('click', hideMenu, {once: true});",
      "position": "menu.style.position = 'fixed'; menu.style.left = e.pageX + 'px'; menu.style.top = e.pageY + 'px';"
    }
  },
  "drag_and_drop": {
    "description": "HTML5 drag and drop API",
    "events": {
      "draggable": {
        "syntax": "element.draggable = true",
        "notes": "Enable dragging on element"
      },
      "ondragstart": {
        "syntax": "element.ondragstart = (e) => { e.dataTransfer.setData('text', data); }",
        "notes": "Set data when drag starts"
      },
      "ondragover": {
        "syntax": "element.ondragover = (e) => { e.preventDefault(); }",
        "notes": "Allow drop, must preventDefault()"
      },
      "ondrop": {
        "syntax": "element.ondrop = (e) => { e.preventDefault(); const data = e.dataTransfer.getData('text'); }",
        "notes": "Handle drop, must preventDefault()"
      }
    },
    "patterns": {
      "make_draggable": "div.draggable = true; div.ondragstart = (e) => { e.dataTransfer.setData('text', filePath); };",
      "make_droppable": "div.ondragover = (e) => { e.preventDefault(); div.classList.add('drag-over'); }; div.ondrop = (e) => { e.preventDefault(); const data = e.dataTransfer.getData('text'); handleDrop(data); };"
    }
  },
  "css_variables": {
    "description": "CSS custom properties for theming",
    "patterns": {
      "define": ":root { --color: #000; } [data-theme='dark'] { --color: #fff; }",
      "use": "color: var(--color);",
      "javascript": "element.style.setProperty('--color', '#ff0000');",
      "toggle": "body.setAttribute('data-theme', 'dark');"
    }
  },
  "localstorage_html5": {
    "description": "localStorage for persistence",
    "patterns": {
      "save": "localStorage.setItem('key', 'value');",
      "load": "const value = localStorage.getItem('key');",
      "save_object": "localStorage.setItem('key', JSON.stringify(obj));",
      "load_object": "const obj = JSON.parse(localStorage.getItem('key') || '{}');"
    }
  },
  "keyboard_events": {
    "description": "Keyboard event handling",
    "events": {
      "keydown": {
        "syntax": "element.addEventListener('keydown', (e) => { if (e.key === 'Enter') { ... } });",
        "notes": "Use keydown for most shortcuts"
      },
      "keyup": {
        "syntax": "element.addEventListener('keyup', handler);",
        "notes": "Use for key release events"
      }
    },
    "key_values": {
      "ArrowLeft": "Left arrow",
      "ArrowRight": "Right arrow",
      "ArrowUp": "Up arrow",
      "ArrowDown": "Down arrow",
      "Enter": "Enter key",
      "Escape": "Escape key",
      "Delete": "Delete key",
      "Tab": "Tab key",
      "Space": "Space bar"
    },
    "modifiers": {
      "ctrlKey": "e.ctrlKey - Ctrl key pressed",
      "shiftKey": "e.shiftKey - Shift key pressed",
      "metaKey": "e.metaKey - Cmd key (Mac) or Windows key",
      "altKey": "e.altKey - Alt key pressed"
    },
    "patterns": {
      "prevent_default": "e.preventDefault(); // Prevent default browser behavior",
      "stop_propagation": "e.stopPropagation(); // Stop event bubbling",
      "check_modifiers": "if (e.ctrlKey && e.key === 's') { e.preventDefault(); save(); }"
    }
  },
  "overlays_modals": {
    "description": "Modal/overlay patterns",
    "patterns": {
      "show": "overlay.classList.remove('hidden');",
      "hide": "overlay.classList.add('hidden');",
      "toggle": "overlay.classList.toggle('hidden');",
      "position_fixed": "position: fixed; inset: 0; z-index: 3000;",
      "center_content": "display: flex; align-items: center; justify-content: center;"
    }
  },
  "transitions": {
    "description": "CSS transitions for smooth animations",
    "patterns": {
      "basic": "transition: property 0.3s ease;",
      "multiple": "transition: background-color 0.3s ease, color 0.3s ease;",
      "all": "transition: all 0.3s ease;"
    }
  },
  "grid_flexbox": {
    "description": "Modern layout patterns",
    "patterns": {
      "grid": "display: grid; grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); gap: 16px;",
      "flex": "display: flex; align-items: center; justify-content: space-between;",
      "flex_column": "display: flex; flex-direction: column;"
    }
  },
  "media_queries": {
    "description": "Responsive design",
    "patterns": {
      "mobile": "@media (max-width: 768px) { ... }",
      "tablet": "@media (min-width: 769px) and (max-width: 1024px) { ... }",
      "desktop": "@media (min-width: 1025px) { ... }"
    }
  }
}
